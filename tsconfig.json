{
  "include": ["src/**/*", "test"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
